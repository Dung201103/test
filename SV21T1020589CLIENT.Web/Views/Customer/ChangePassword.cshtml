<style>
    body {
        background-color: #f8f9fa;
    }

    .card-custom {
        border-radius: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-img-left {
        border-radius: 1rem 0 0 1rem;
        object-fit: cover;
        height: 100%;
    }

    .btn-primary-custom {
        background-color: #007bff;
        border: none;
    }

        .btn-primary-custom:hover {
            background-color: #0056b3;
        }
</style>
    @{
	    var userData = User.GetUserData();}
    <section class="vh-75" style="background-color: #999999;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="card card-custom">
                        <div class="row g-0">

                            <div class="col-md-6 d-none d-md-block">
                                <img src="~/theme/images/cp.jpg"
                                     alt="Password change image"
                                     class="card-img-left img-fluid">
                            </div>

                            <!-- Form Section -->
                            <div class="col-md-6">
                                <div class="card-body p-4 p-md-5">
                                    <h3 class="mb-4">Thay Đổi Mật Khẩu</h3>
                                    <form action="~/Customer/ChangePassword" method="post">
                                        <!-- Email -->
                                        <div class="form-floating mb-3">
                                        <input type="email" class="form-control" id="floatingEmail" value="@userData.CustomerName" required readonly>
                                            <label for="floatingEmail">Tên Khách Hàng</label>
                                        </div>

                                        <!-- Mật khẩu cũ -->
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" id="floatingOldPassword" name="oldPassword" required>
                                            <label for="floatingOldPassword">Mật khẩu cũ</label>
                                            @Html.ValidationMessage("oldPassword")
                                        </div>

                                        <!-- Mật khẩu mới -->
                                        <div class="form-floating mb-3">
                                            <input type="password" class="form-control" id="floatingNewPassword" name="newPassword" required>
                                            <label for="floatingNewPassword">Mật khẩu mới</label>
                                            @Html.ValidationMessage("newPassword")
                                        </div>

                                        <!-- Xác nhận mật khẩu mới -->
                                        <div class="form-floating mb-4">
                                            <input type="password" class="form-control" id="floatingConfirmPassword" name="confirmPassword" required>
                                            <label for="floatingConfirmPassword">Xác nhận mật khẩu mới</label>
                                            @Html.ValidationMessage("confirmPassword")
                                        </div>

                                        <!-- Button -->
                                        <div class="d-grid mb-3">
                                            <button type="submit" class="btn btn-primary-custom btn-lg">Thay Đổi Mật Khẩu</button>
                                        </div>

                                        <!-- Validation messages -->
                                        <div class="mt-3 text-center">
                                            @Html.ValidationMessage("Error", new { @style = "color: #f00; font-weight: bold;" })
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


